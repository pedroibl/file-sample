#!/bin/bash

# Install required packages
sudo apt-get update
sudo apt-get install -y \
    git \
    software-properties-common \
    snapd \
    curl \
    vim \
    xclip

# Install bat via snap
sudo snap install bat

# Display reminders
echo "LEMBRE-SE > run: sudo mkdir -p ~/.local/bin"
echo "Lembre-se de rodar: ln -s /usr/bin/batcat ~/.local/bin/bat"
echo "Depois que instalar o bat"

# End of script
