#!/bin/bash

# Packages to install
packages=(
    "git"
    "software-properties-common"
    "snapd"
    "curl"
    "vim"
    "xclip"
    "bat"
    "htop"
    "build-essential"
    "openssh-server"
    "nmap"
    "openssl"
    "tree"
    "bat"
)

# Install packages using apt-get
sudo apt-get update
for package in "${packages[@]}"; do
    sudo apt-get install -y "$package"
done

# Install bat via snap

# Display reminders
echo "LEMBRE-SE > run: sudo mkdir -p ~/.local/bin"
echo "Lembre-se de rodar: ln -s /usr/bin/batcat ~/.local/bin/bat"
echo "Lembre-se de add >   alias bat='batcat'  "
echo "Depois que instalar o bat"

# End of script

