# INSTALL VScode 
sudo apt install software-properties-common apt-transport-https wget
wget -q https://packages.microsoft.com/keys/microsoft.asc -O- | sudo apt-key add -
sudo add-apt-repository "deb [arch=amd64] https://packages.microsoft.com/repos/vscode stable main"
sudo apt update
sudo apt install code

# GOOGLE-CHROME
sudo apt install -y wget gnupg
wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
sudo dpkg -i google-chrome-stable_current_amd64.deb
sudo apt -f install

# Install dsutils

git clone https://github.com/jeroenjanssens/dsutils
cd dsutils 
# Delete files that aren't tools eg .git .gitignore LICENCE  and
mv * ~/.local/bin

# add ~/.local/bin to the path
vim ~/.bashrc
export PATH="$HOME/.local/bin:$PATH"
source ~/.bashrc

sudo apt install curl
sudo apt install xclip
alias pbcopy='xclip --selection clipboard'


## Install oh my bash and fonts
Omybash documentation: https://github.com/ohmybash/oh-my-bash
sudo apt-get install fonts-powerline
bash -c "$(wget https://raw.githubusercontent.com/ohmybash/oh-my-bash/master/tools/install.sh -O -)"

# CSVkit , baat and rush
sudo apt install csvkit
sudo apt install rush
sudo apt install bat
ln -s /usr/bin/batcat ~/.local/bin/bat

# Install GO and pup
sudo apt install snap
sudo snap install go --classic

go install github.com/ericchiang/pup@latest

# add GO bin to the $PATH
export PATH=$PATH:/home/ubu/go/bin

